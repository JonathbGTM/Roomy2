@{
    Layout = null;
    var user = Session["USER_BO"] as RoomyLeRetour.Models.User;

}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>BackOffice</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/roomy.css" rel="stylesheet" />

    

</head>

<body>
    <div class="container">
        <h1>BackOffice</h1>
        <nav class="navbar navbar-expand-lg navbar-light bg-info">
            <a class="navbar-brand" href="http://localhost:59499/Home/">Roomy</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item active">
                        <a class="nav-link" href="http://localhost:59499/backoffice">Back Office <span class="sr-only">(current)</span></a>
                    </li>
                </ul>
                <ul class="navbar-nav">
                    <li class="nav-item active">
                        <a class="nav-link" href="http://localhost:59499/backoffice/rooms">Liste des Salles <span class="sr-only">(current)</span></a>
                    </li>
                </ul>
                <ul class="navbar-nav">
                    <li class="nav-item active">
                        <a class="nav-link" href="http://localhost:59499/BackOffice/rooms/Create">Ajouter Salle <span class="sr-only">(current)</span></a>
                    </li>
                </ul>
                <ul class="navbar-nav">
                    <li class="nav-item active">
                        <a class="nav-link" href="http://localhost:59499/BackOffice/categories">Liste des catégories <span class="sr-only">(current)</span></a>
                    </li>
                </ul>
                <ul class="navbar-nav">
                    <li class="nav-item active">
                        <a class="nav-link" href="http://localhost:59499/BackOffice/categories/Create">Créer catégorie <span class="sr-only">(current)</span></a>
                    </li>
                </ul>
                <span class="navbar-text">
                    Bonjour @user.FirstName @user.LastName <a href="@Url.Action("Logout", "Authentication")" class="btn btn-danger">Déconnexion</a>
                </span>
            </div>
        </nav>

        @if(TempData["Message"] != null)
        {
            <div class="alert alert-@TempData["MessageType"].ToString()">
                @TempData["Message"].ToString()
            </div> 
        }

        @RenderBody()
        <footer class="page-footer font-small blue pt-4">

            <!-- Footer Links -->
            <div class="container-fluid text-center text-md-left">

                <!-- Grid row -->
                <div class="row">

                    <!-- Grid column -->
                    <div class="col-md-6 mt-md-0 mt-3">

                        <!-- Content -->
                        <h5 class="text-uppercase">POEC Rouen 2018</h5>
                        <p>Blablabla.</p>

                    </div>
                    <!-- Grid column -->

                    <hr class="clearfix w-100 d-md-none pb-3">

                    <!-- Grid column -->
                    <div class="col-md-3 mb-md-0 mb-3">

                        <!-- Links -->
                        <h5 class="text-uppercase">Modules</h5>

                        <ul class="list-unstyled">
                            <li>
                                <a href="#!">C#</a>
                            </li>
                            <li>
                                <a href="#!">HTML</a>
                            </li>
                            <li>
                                <a href="#!">Dot.NET</a>
                            </li>
                            <li>
                                <a href="#!">Entity</a>
                            </li>
                        </ul>

                    </div>
                    <!-- Grid column -->
                    <!-- Grid column -->
                    <div class="col-md-3 mb-md-0 mb-3">

                        <!-- Links -->
                        <h5 class="text-uppercase">Stagiaires</h5>

                        <ul class="list-unstyled">
                            <li>
                                <a href="#!">Florian</a>
                            </li>
                            <li>
                                <a href="#!">Thomas</a>
                            </li>
                            <li>
                                <a href="#!">Blandine</a>
                            </li>
                            <li>
                                <a href="#!">Gary</a>
                            </li>
                        </ul>

                    </div>
                    <!-- Grid column -->

                </div>
                <!-- Grid row -->

            </div>
            <!-- Footer Links -->
            <!-- Copyright -->
            <div class="footer-copyright text-center py-3">
                © 2018 Jojo

            </div>
            <!-- Copyright -->

        </footer>
    </div>

    <script src="~/Scripts/jquery-3.0.0.min.js"></script>
    <script src="~/Scripts/popper.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    @RenderSection("SectionScripts", false)

</body>
</html>